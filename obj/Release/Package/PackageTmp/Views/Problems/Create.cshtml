@model UploadAndDisplayImageInMvc.Models.Problem

@{
    ViewBag.Title = "ارسال مشکلات";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="oi" style="color:white;">
    <h1>لطفا اگر مشکلی در سایت وجود دارد به ما بگویید</h1>
    <h2>راه های ارتباطی</h2>
