
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="~/img/logo-color.png">
    <title>پنل مدیریت</title>
</head>
<body>
    <div class="bb">
        <a href="~/Content/Place"><button>برگشت</button></a><br />
    </div>
    <br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
    <div class="bm">
        <button><a href="~/Content/Create">افزودن مکان</a></button><br />
    </div>
    <div class="bp">
        <button><a href="~/Content/Index">ویرایش مکان</a></button><br />
    </div>
    <div class="by">
        <button><a href="~/Problems/Index">حل مشکلات</a></button><br />
    </div>


    <style>
        body {
            background-image: url(../../img/R.jpg);
            background-repeat: no-repeat;
            background-size: cover;
            background-attachment: fixed;
        }

        .bm {
            text-align: center;
            margin-left: 10%;
        }

            .bm a {
                text-decoration: none;
                color: white;
            }

            .bm button {
                border-radius: 20px;
                border-bottom: solid;
                color: white;
                background-color: green;
                border-color: green;
                padding: 10px;
                margin: 10px;
                width: 60%;
            }

                .bm button:hover {
                    font-size: 110%;
                    box-shadow: 0 0 10px green,0 0 20px green, 0 0 40px green, 0 0 80px green, 0 0 160px green;
                    transition: 1.6s;
                }

        .bp {
            text-align: center;
            margin-right: 20%;
        }

            .bp a {
                text-decoration: none;
                color: white;
            }

            .bp button {
                border-radius: 20px;
                border-bottom: solid;
                color: white;
                background-color: orange;
                border-color: orange;
                padding: 10px;
                margin: 10px;
                width: 60%;
            }

                .bp button:hover {
                    font-size: 110%;
                    box-shadow: 0 0 10px orange,0 0 20px orange, 0 0 40px orange, 0 0 80px orange, 0 0 160px orange;
                    transition: 1.6s;
                }

        .by {
            text-align: center;
            margin-left: 10%;
        }

            .by a {
                text-decoration: none;
                color: white;
            }

            .by button {
                border-radius: 20px;
                border-bottom: solid;
                color: white;
                background-color: red;
                border-color: red;
                padding: 10px;
                margin: 10px;
                width: 60%;
            }

                .by button:hover {
                    font-size: 110%;
                    box-shadow: 0 0 10px red,0 0 20px red, 0 0 40px red, 0 0 80px red, 0 0 160px red;
                    transition: 1.6s;
                }

        .bb {
            text-align: left;
        }

            .bb a {
                text-decoration: none;
            }

            .bb button {
                border-radius: 20px;
                border-bottom: solid;
                color: white;
                background-color: blue;
                border-color: blue;
                padding: 6px;
                margin: 6px;
                width: 10%;
            }

                .bb button:hover {
                    font-size: 160%;
                    transition: 1s;
                    background-color: blue;
                    border-color: blue;
                    box-shadow: 0 4px 8px 0 blue, 0 6px 20px 0 blue;
                }
    </style>
</body>
</html>