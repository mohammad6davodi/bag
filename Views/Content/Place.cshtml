@model IEnumerable<UploadAndDisplayImageInMvc.ViewModel.ContentViewModel>
@{
    ViewBag.Title = "دنیا رو بشناس";
}
<br />
<div class="by">
    <form method="get" action="~/Content/Place">
        <tr>

            <th>
                <input type="text" class="form-control" name="search" value="@(ViewBag.search)" />
            </th>
            <th>

                <input type="submit" value="جستجو" class="btn btn-success btn-block" style="width:20%; background-color:green; border-color:green;" />
            </th>
        </tr>
    </form>
</div><br />
<center>
    @foreach (var item in Model)
    {
        <div class="card">
            <img src="/Content/RetrieveImage/@item.ID" alt="" />
            <h1><b>@item.Title</b></h1>
            <button><a href="~/Content/Details/@item.ID">بازدید</a></button>
        </div><br /><br />
    }
</center>
<style>
    body {
        background-image: url(../../img/back.jpeg);
        background-repeat: no-repeat;
        background-size: cover;
        background-attachment: fixed;
    }

    .card {
        border-radius: 10px;
        border: 1px solid;
        width: 60%;
        padding: 6px;
        margin: 6px;
        text-align: center;
        background-color: powderblue;
        box-shadow: 0 4px 8px 0 rgb(0, 255, 255), 0 6px 20px 0 rgb(0, 255, 255);
    }

        .card button {
            background-color: green;
            border-color: green;
            width: 40%;
            border-radius: 10px;
            font-size: 160%;
            box-shadow: 0 4px 8px 0 green, 0 6px 20px 0 green;
        }

        .card a {
            color: white;
            text-decoration: none;
        }

        .card h1 {
            color: white;
        }

        .card img {
            width: 80%;
        }

    .by {
        text-align: center;
        border: 1px solid #4c5a65;
        padding: 10px;
        margin: 10px;
        background-color: #4c5a65;
        width: 60%;
        margin-left: 20%;
    }

        .by input {
            background-color: orange;
            border-color: orange;
            color: white;
            width: 60%;
            font-size: 160%;
        }
</style>