@model UploadAndDisplayImageInMvc.Models.Content

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>دنیا رو بشناس</title>
    <link href="~/Content/bh.css" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/x-icon" href="~/img/logo-color.png">
</head>
<body>
    <div class="bb">
        <a href="~/Content/Place"><button>برگشت</button></a><br />
    </div>
    <main>
        <div class="book">
            <div class="book-cover">
                <div>
                    <h1>@Model.Title</h1>
                    <div class="separator"></div>
                    <h2>لطفا مطالعه کنید</h2>
                </div>
            </div>
            <div class="book-content">
                <img src="/Content/RetrieveImage/@Model.ID" style="height:100%; width:100%;" /><br />
                <h3 style="text-align:center">@Model.Title</h3><br />
                <p style="float:right">@Html.Raw(Model.Description)</p><br />
                <button class="btn btn-danger" style="background-color:orange; border-color:orange; font-size:20px; float:right;"><a href="@Model.Link1" style="color:white; text-decoration:none;">سه بعدی</a></button>
            </div>
        </div>
    </main>
    <style>
        img{
            height:100%;
            width:100%;
        }
    </style>
</body>
</html>
